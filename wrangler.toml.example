# Example wrangler.toml.example â€” keep this in repo and render a real wrangler.toml in CI using secrets
# Replace the placeholder values via CI or copy and replace locally (do NOT commit real secrets).

name = "mealfinder"
# account_id should be provided via CI secret: CF_ACCOUNT_ID
account_id = "${CF_ACCOUNT_ID}"
compatibility_date = "2024-12-01"
compatibility_flags = ["nodejs_compat"]
pages_build_output_dir = ".open-next/assets"

# KV namespace (provide CF_KV_ID via secret if used)
[[kv_namespaces]]
binding = "MY_KV"
id = "${CF_KV_ID}"

# R2 binding
[[r2_buckets]]
binding = "MY_R2"
bucket_name = "${CF_R2_BUCKET}"

# D1 database
[[d1_databases]]
binding = "MY_DB"
database_name = "my-database"
database_id = "${CF_D1_ID}"

# Notes:
# - Do not commit the real values into the repo. Use GitHub secrets and render this file in CI
#   (see .github/workflows/pages.yml which will render wrangler.toml from secrets before build).
# - Required secrets: CF_ACCOUNT_ID, CF_PAGES_API_TOKEN, CF_PAGES_PROJECT_NAME
# - Optional binding secrets: CF_KV_ID, CF_R2_BUCKET, CF_D1_ID
